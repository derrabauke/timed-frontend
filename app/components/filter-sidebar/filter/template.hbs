{{#if (eq @type 'button')}}
  <div class="btn-group btn-group--auto">
    {{#each @options as |opt|}}
      <button
        class="btn {{if (eq (get opt valuePath) selected) 'active'}}"
        {{on "click" (fn (optional @onChange) (get opt valuePath))}}
      >
        {{get opt labelPath}}
      </button>
      {{yield}}
    {{/each}}
  </div>
{{else if (eq @type 'date')}}
  <SyDatepicker
    @value={{this.selected}}
    @onChange={{optional on-change}}
    @placeholder={{if @placeholder @placeholder}}
    @name={{or @name 'date'}}
  />
{{else if (eq @type 'search')}}
  <input
    type="search"
    class="form-control"
    placeholder={{if @placeholder @placeholder 'Search'}}
    name={{if @name @name 'search'}}
    value={{@selected}}
    {{on "input" (fn (optional @onChange) 'target.value')}}
    {{on "change" (fn (optional @onChange) 'target.value')}}
  >
{{else if (eq @type 'select')}}
  <select class="form-control" onchange={{action (optional on-change) value='target.value'}}>
    {{#if prompt}}
      <option value="">{{prompt}}</option>
    {{/if}}
    {{#each options as |opt|}}
      <option
        value={{get opt valuePath}}
        selected={{if (eq selected (get opt valuePath)) 'selected'}}
      >
        {{get opt labelPath}}
      </option>
    {{/each}}
    {{yield}}
  </select>
{{else}}
  {{yield}}
{{/if}}
