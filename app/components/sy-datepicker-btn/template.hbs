<BasicDropdown @horizontalPosition='auto-right' as |dd|>
  <dd.Trigger>
    <button class='btn btn-default' type="button">
      <FaIcon @icon='calendar' />
    </button>
  </dd.Trigger>

  <dd.Content>
    <SyCalendar
      @center={{this.center}}
      @selected={{@value}}
      class='sy-datepicker'
      @onCenterChange={{this.updateCenter}}
      @onSelect={{this.updateSelection}}
    />
  </dd.Content>
</BasicDropdown>
